{
    "name": "vision-participant",
    "publisher": "vscode-samples",
    "displayName": "Vision Participant",
    "description": "A chat participant providing OpenAI vision capabilities.",
    "version": "0.1.0",
    "engines": {
        "vscode": "^1.88.0"
    },
    "extensionDependencies": [
        "github.copilot-chat"
    ],
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "enabledApiProposals": [
        "chatParticipant",
        "chatVariableResolver"
    ],
    "contributes": {
        "chatParticipants": [
            {
                "id": "vision-participant.particpant",
                "name": "vision",
                "description": "Ask a question about an image",
                "isSticky": false
            }
        ],
        "commands": [
            {
                "command": "vision-participant.chatCommand",
                "title": "Chat about image",
                "icon": "$(copilot)"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "vision-participant.chatCommand",
                    "when": "resourceExtname == .png || resourceExtname == .jpg",
                    "group": "navigation"
                }
            ]
        }
    },
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "^20.5.9",
        "@types/vscode": "1.82.0",
        "eslint": "^7.22.0",
        "typescript": "^4.0.3"
    },
    "dependencies": {
        "dotenv": "^16.4.5",
        "openai": "^4.29.2",
        "sharp": "^0.33.3"
    }
}